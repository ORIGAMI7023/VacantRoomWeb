@page "/admin/email-test"
@using VacantRoomWeb.Services
@rendermode InteractiveServer
@inject IEmailService EmailService
@inject AdminAuthService AuthService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime
@inject EnhancedLoggingService LoggingService


<PageTitle>邮件服务测试</PageTitle>

@if (!IsAuthenticated)
{
    <div class="loading-container">
        <div class="spinner-border" role="status">
            <span class="visually-hidden">加载中...</span>
        </div>
    </div>
}
else
{
    <div class="email-test-container">
        <div class="test-header">
            <h2>📧 邮件服务测试</h2>
            <p>测试 VacantRoomWeb 邮件通知系统是否正常工作</p>
        </div>

        <!-- 新增：简化测试 -->
        <div class="test-section">
            <h3>🔧 调试测试</h3>
            <div class="test-card">
                <div class="test-description">
                    <h4>简化调试测试</h4>
                    <p>直接测试邮件服务的基本连接，会输出详细的调试信息。</p>
                </div>
                <div class="test-action">
                    <button @onclick="RunSimpleTest"
                            disabled="@IsTesting"
                            class="btn btn-debug">
                        @if (IsTesting && CurrentTest == "simple")
                        {
                            <span>🔄 调试中...</span>
                        }
                        else
                        {
                            <span>🔧 运行调试测试</span>
                        }
                    </button>
                </div>
            </div>
        </div>

        <div class="test-section">
            <h3>基础邮件测试</h3>
            <div class="test-card">
                <div class="test-description">
                    <h4>服务连通性测试</h4>
                    <p>测试与 NotifyHubAPI 的连接是否正常，发送一封测试邮件到默认收件人。</p>
                </div>
                <div class="test-action">
                    <button @onclick="RunBasicTest"
                            disabled="@IsTesting"
                            class="btn btn-primary">
                        @if (IsTesting && CurrentTest == "basic")
                        {
                            <span>🔄 测试中...</span>
                        }
                        else
                        {
                            <span>🧪 运行基础测试</span>
                        }
                    </button>
                </div>
            </div>
        </div>

        <div class="test-section">
            <h3>安全警报测试</h3>
            <div class="test-card">
                <div class="test-description">
                    <h4>安全警报邮件</h4>
                    <p>模拟安全事件，测试安全警报邮件的发送功能。</p>
                </div>
                <div class="test-action">
                    <button @onclick="RunSecurityTest"
                            disabled="@IsTesting"
                            class="btn btn-warning">
                        @if (IsTesting && CurrentTest == "security")
                        {
                            <span>🔄 测试中...</span>
                        }
                        else
                        {
                            <span>⚠️ 测试安全警报</span>
                        }
                    </button>
                </div>
            </div>
        </div>

        <div class="test-section">
            <h3>系统通知测试</h3>
            <div class="test-card">
                <div class="test-description">
                    <h4>系统通知邮件</h4>
                    <p>测试系统通知邮件的发送功能。</p>
                </div>
                <div class="test-action">
                    <button @onclick="RunSystemNotificationTest"
                            disabled="@IsTesting"
                            class="btn btn-info">
                        @if (IsTesting && CurrentTest == "notification")
                        {
                            <span>🔄 测试中...</span>
                        }
                        else
                        {
                            <span>📢 测试系统通知</span>
                        }
                    </button>
                </div>
            </div>
        </div>

        @if (TestResults.Any())
        {
            <div class="results-section">
                <h3>测试结果</h3>
                <div class="results-container">
                    @foreach (var result in TestResults.OrderByDescending(r => r.Timestamp))
                    {
                        <div class="result-item @(result.Success ? "success" : "error")">
                            <div class="result-header">
                                <span class="result-type">@result.TestType</span>
                                <span class="result-time">@result.Timestamp.ToString("HH:mm:ss")</span>
                                <span class="result-status">@(result.Success ? "✅ 成功" : "❌ 失败")</span>
                            </div>
                            <div class="result-message">
                                @result.Message
                            </div>
                            @if (!string.IsNullOrEmpty(result.Details))
                            {
                                <div class="result-details">
                                    <strong>详细信息：</strong> @result.Details
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        }

        <div class="actions-section">
            <button @onclick="ClearResults" class="btn btn-secondary">🗑️ 清空结果</button>
            <button @onclick="GoBack" class="btn btn-outline-secondary">← 返回管理后台</button>
        </div>
    </div>
}

<style>
    /* 现有样式保持不变... */
    .btn-debug {
        background: #6f42c1;
        color: white;
    }

        .btn-debug:hover:not(:disabled) {
            background: #5a32a3;
        }

    /* 其他样式... */
</style>

@code {
    private bool IsAuthenticated = false;
    private bool IsTesting = false;
    private string CurrentTest = "";
    private List<TestResult> TestResults = new();

    protected override async Task OnInitializedAsync()
    {
        IsAuthenticated = AuthService.IsAuthenticated();

        if (!IsAuthenticated)
        {
            Navigation.NavigateTo("/admin/login");
            return;
        }
    }

    private async Task RunSimpleTest()
    {
        IsTesting = true;
        CurrentTest = "simple";
        StateHasChanged();

        try
        {
            var success = await EmailService.SimpleTestEmailServiceAsync();

            // 写入文件日志，方便在 access-*.log 中追踪
            LoggingService.LogAccess("ADMIN", "EMAIL_TEST_SIMPLE",
                success ? "SUCCESS" : "FAILED", "EmailTest.razor");

            AddTestResult("简化调试测试", success,
                success ? "调试测试成功，请查看应用日志获取详细信息"
                        : "调试测试失败，请查看应用日志获取详细错误信息",
                "此测试会输出详细的调试日志，请查看应用程序日志文件或控制台输出");
        }
        catch (Exception ex)
        {
            LoggingService.LogAccess("ADMIN", "EMAIL_TEST_SIMPLE",
                $"EXCEPTION:{ex.Message}", "EmailTest.razor");

            AddTestResult("简化调试测试", false, "测试过程中发生异常", ex.Message);
        }
        finally
        {
            IsTesting = false;
            CurrentTest = "";
            StateHasChanged();
        }
    }

    private async Task RunBasicTest()
    {
        IsTesting = true;
        CurrentTest = "basic";
        StateHasChanged();

        try
        {
            var success = await EmailService.TestEmailServiceAsync();

            LoggingService.LogAccess("ADMIN", "EMAIL_TEST_BASIC",
                success ? "SUCCESS" : "FAILED", "EmailTest.razor");

            AddTestResult("基础连通性测试", success,
                success ? "邮件服务连接正常，测试邮件发送成功"
                        : "邮件服务连接失败或发送失败",
                success ? "API连接正常，邮件已发送到默认收件人"
                        : "请检查API配置和网络连接");
        }
        catch (Exception ex)
        {
            LoggingService.LogAccess("ADMIN", "EMAIL_TEST_BASIC",
                $"EXCEPTION:{ex.Message}", "EmailTest.razor");

            AddTestResult("基础连通性测试", false, "测试过程中发生异常", ex.Message);
        }
        finally
        {
            IsTesting = false;
            CurrentTest = "";
            StateHasChanged();
        }
    }

    private async Task RunSecurityTest()
    {
        IsTesting = true;
        CurrentTest = "security";
        StateHasChanged();

        try
        {
            var success = await EmailService.SendSecurityAlertAsync(
                "测试安全警报",
                "这是一个测试安全警报，用于验证安全邮件通知功能是否正常工作。",
                "192.168.1.100");

            AddTestResult("安全警报测试", success,
                success ? "安全警报邮件发送成功" : "安全警报邮件发送失败",
                success ? "安全警报邮件已发送，包含完整的安全事件信息" : "请检查邮件服务配置");
        }
        catch (Exception ex)
        {
            AddTestResult("安全警报测试", false, "测试过程中发生异常", ex.Message);
        }
        finally
        {
            IsTesting = false;
            CurrentTest = "";
            StateHasChanged();
        }
    }

    private async Task RunSystemNotificationTest()
    {
        IsTesting = true;
        CurrentTest = "notification";
        StateHasChanged();

        try
        {
            var success = await EmailService.SendSystemNotificationAsync(
                "系统通知测试",
                "这是一个系统通知测试邮件，用于验证系统通知功能是否正常工作。系统当前运行正常，所有服务都在线。");

            AddTestResult("系统通知测试", success,
                success ? "系统通知邮件发送成功" : "系统通知邮件发送失败",
                success ? "系统通知邮件已发送，格式正确" : "请检查邮件服务配置");
        }
        catch (Exception ex)
        {
            AddTestResult("系统通知测试", false, "测试过程中发生异常", ex.Message);
        }
        finally
        {
            IsTesting = false;
            CurrentTest = "";
            StateHasChanged();
        }
    }

    private void AddTestResult(string testType, bool success, string message, string details = "")
    {
        TestResults.Add(new TestResult
        {
            TestType = testType,
            Success = success,
            Message = message,
            Details = details,
            Timestamp = DateTime.Now
        });

        // 只保留最近10个测试结果
        if (TestResults.Count > 10)
        {
            TestResults = TestResults.OrderByDescending(r => r.Timestamp).Take(10).ToList();
        }
    }

    private void ClearResults()
    {
        TestResults.Clear();
        StateHasChanged();
    }

    private void GoBack()
    {
        Navigation.NavigateTo("/admin");
    }

    public class TestResult
    {
        public string TestType { get; set; } = "";
        public bool Success { get; set; }
        public string Message { get; set; } = "";
        public string Details { get; set; } = "";
        public DateTime Timestamp { get; set; }
    }
}