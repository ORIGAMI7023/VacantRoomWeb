@page "/admin/email-test"
@rendermode InteractiveServer
@inject IEmailService EmailService
@inject AdminAuthService AuthService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<PageTitle>邮件服务测试</PageTitle>

@if (!IsAuthenticated)
{
    <div class="loading-container">
        <div class="spinner-border" role="status">
            <span class="visually-hidden">加载中...</span>
        </div>
    </div>
}
else
{
    <div class="email-test-container">
        <div class="test-header">
            <h2>📧 邮件服务测试</h2>
            <p>测试 VacantRoomWeb 邮件通知系统是否正常工作</p>
        </div>

        <div class="test-section">
            <h3>基础邮件测试</h3>
            <div class="test-card">
                <div class="test-description">
                    <h4>服务连通性测试</h4>
                    <p>测试与 NotifyHubAPI 的连接是否正常，发送一封测试邮件到默认收件人。</p>
                </div>
                <div class="test-action">
                    <button @onclick="RunBasicTest"
                            disabled="@IsTesting"
                            class="btn btn-primary">
                        @if (IsTesting && CurrentTest == "basic")
                        {
                            <span>🔄 测试中...</span>
                        }
                        else
                        {
                            <span>🧪 运行基础测试</span>
                        }
                    </button>
                </div>
            </div>
        </div>

        <div class="test-section">
            <h3>安全警报测试</h3>
            <div class="test-card">
                <div class="test-description">
                    <h4>安全警报邮件</h4>
                    <p>模拟安全事件，测试安全警报邮件的发送功能。</p>
                </div>
                <div class="test-action">
                    <button @onclick="RunSecurityTest"
                            disabled="@IsTesting"
                            class="btn btn-warning">
                        @if (IsTesting && CurrentTest == "security")
                        {
                            <span>🔄 测试中...</span>
                        }
                        else
                        {
                            <span>⚠️ 测试安全警报</span>
                        }
                    </button>
                </div>
            </div>
        </div>

        <div class="test-section">
            <h3>系统通知测试</h3>
            <div class="test-card">
                <div class="test-description">
                    <h4>系统通知邮件</h4>
                    <p>测试系统通知邮件的发送功能。</p>
                </div>
                <div class="test-action">
                    <button @onclick="RunSystemNotificationTest"
                            disabled="@IsTesting"
                            class="btn btn-info">
                        @if (IsTesting && CurrentTest == "notification")
                        {
                            <span>🔄 测试中...</span>
                        }
                        else
                        {
                            <span>📢 测试系统通知</span>
                        }
                    </button>
                </div>
            </div>
        </div>

        @if (TestResults.Any())
        {
            <div class="results-section">
                <h3>测试结果</h3>
                <div class="results-container">
                    @foreach (var result in TestResults.OrderByDescending(r => r.Timestamp))
                    {
                        <div class="result-item @(result.Success ? "success" : "error")">
                            <div class="result-header">
                                <span class="result-type">@result.TestType</span>
                                <span class="result-time">@result.Timestamp.ToString("HH:mm:ss")</span>
                                <span class="result-status">@(result.Success ? "✅ 成功" : "❌ 失败")</span>
                            </div>
                            <div class="result-message">
                                @result.Message
                            </div>
                            @if (!string.IsNullOrEmpty(result.Details))
                            {
                                <div class="result-details">
                                    <strong>详细信息：</strong> @result.Details
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        }

        <div class="actions-section">
            <button @onclick="ClearResults" class="btn btn-secondary">🗑️ 清空结果</button>
            <button @onclick="GoBack" class="btn btn-outline-secondary">← 返回管理后台</button>
        </div>
    </div>
}

