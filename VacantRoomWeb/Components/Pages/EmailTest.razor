@page "/admin/email-test"
@using VacantRoomWeb.Services
@rendermode InteractiveServer
@inject IEmailService EmailService
@inject AdminAuthService AuthService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime
@inject EnhancedLoggingService LoggingService

<PageTitle>邮件服务测试</PageTitle>

@if (!IsAuthenticated)
{
    <div class="loading-container">
        <div class="spinner-border" role="status">
            <span class="visually-hidden">加载中...</span>
        </div>
    </div>
}
else
{
    <div class="email-test-page">
        <!-- 页面标题 -->
        <div class="page-header">
            <h2>📧 邮件服务测试</h2>
            <p>测试 VacantRoomWeb 邮件通知系统是否正常工作</p>
        </div>

        <!-- 测试项目网格 -->
        <div class="test-grid">
            <!-- 调试测试 -->
            <div class="test-card">
                <div class="card-header">
                    <div class="card-icon">🔧</div>
                    <div class="card-title">
                        <h3>调试测试</h3>
                        <p>直接测试邮件服务的基本连接，会输出详细的调试信息</p>
                    </div>
                </div>
                <div class="card-action">
                    <button @onclick="RunSimpleTest"
                            disabled="@IsTesting"
                            class="btn btn-debug">
                        @if (IsTesting && CurrentTest == "simple")
                        {
                            <span class="btn-loading">🔄 调试中...</span>
                        }
                        else
                        {
                            <span>🔧 运行调试测试</span>
                        }
                    </button>
                </div>
            </div>

            <!-- 基础测试 -->
            <div class="test-card">
                <div class="card-header">
                    <div class="card-icon">🧪</div>
                    <div class="card-title">
                        <h3>服务连通性测试</h3>
                        <p>测试与 NotifyHubAPI 的连接是否正常，发送一封测试邮件到默认收件人</p>
                    </div>
                </div>
                <div class="card-action">
                    <button @onclick="RunBasicTest"
                            disabled="@IsTesting"
                            class="btn btn-primary">
                        @if (IsTesting && CurrentTest == "basic")
                        {
                            <span class="btn-loading">🔄 测试中...</span>
                        }
                        else
                        {
                            <span>🧪 运行基础测试</span>
                        }
                    </button>
                </div>
            </div>

            <!-- 安全警报测试 -->
            <div class="test-card">
                <div class="card-header">
                    <div class="card-icon">⚠️</div>
                    <div class="card-title">
                        <h3>安全警报邮件</h3>
                        <p>模拟安全事件，测试安全警报邮件的发送功能</p>
                    </div>
                </div>
                <div class="card-action">
                    <button @onclick="RunSecurityTest"
                            disabled="@IsTesting"
                            class="btn btn-warning">
                        @if (IsTesting && CurrentTest == "security")
                        {
                            <span class="btn-loading">🔄 测试中...</span>
                        }
                        else
                        {
                            <span>⚠️ 测试安全警报</span>
                        }
                    </button>
                </div>
            </div>

            <!-- 系统通知测试 -->
            <div class="test-card">
                <div class="card-header">
                    <div class="card-icon">📢</div>
                    <div class="card-title">
                        <h3>系统通知邮件</h3>
                        <p>测试系统通知邮件的发送功能</p>
                    </div>
                </div>
                <div class="card-action">
                    <button @onclick="RunSystemNotificationTest"
                            disabled="@IsTesting"
                            class="btn btn-info">
                        @if (IsTesting && CurrentTest == "notification")
                        {
                            <span class="btn-loading">🔄 测试中...</span>
                        }
                        else
                        {
                            <span>📢 测试系统通知</span>
                        }
                    </button>
                </div>
            </div>
        </div>

        <!-- 测试结果 -->
        @if (TestResults.Any())
        {
            <div class="results-section">
                <h3>📊 测试结果</h3>
                <div class="results-list">
                    @foreach (var result in TestResults.OrderByDescending(r => r.Timestamp))
                    {
                        <div class="result-item @(result.Success ? "success" : "error")">
                            <div class="result-header">
                                <div class="result-left">
                                    <span class="result-icon">@(result.Success ? "✅" : "❌")</span>
                                    <span class="result-type">@result.TestType</span>
                                </div>
                                <span class="result-time">@result.Timestamp.ToString("HH:mm:ss")</span>
                            </div>
                            <div class="result-content">
                                <div class="result-message">@result.Message</div>
                                @if (!string.IsNullOrEmpty(result.Details))
                                {
                                    <div class="result-details">
                                        <strong>详细信息：</strong>@result.Details
                                    </div>
                                }
                            </div>
                        </div>
                    }
                </div>
            </div>
        }

        <!-- 操作按钮 -->
        <div class="actions-section">
            <button @onclick="ClearResults" class="btn btn-secondary">
                🗑️ 清空结果
            </button>
            <button @onclick="GoBack" class="btn btn-outline">
                ← 返回管理后台
            </button>
        </div>
    </div>
}

