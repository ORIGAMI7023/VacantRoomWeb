@code {
    private bool IsAuthenticated = false;
    private bool IsTesting = false;
    private string CurrentTest = "";
    private List<TestResult> TestResults = new();

    protected override async Task OnInitializedAsync()
    {
        IsAuthenticated = AuthService.IsAuthenticated();

        if (!IsAuthenticated)
        {
            Navigation.NavigateTo("/admin/login");
            return;
        }
    }

    private async Task RunSimpleTest()
    {
        IsTesting = true;
        CurrentTest = "simple";
        StateHasChanged();

        try
        {
            var success = await EmailService.SimpleTestEmailServiceAsync();

            LoggingService.LogAccess("ADMIN", "EMAIL_TEST_SIMPLE",
                success ? "SUCCESS" : "FAILED", "EmailTest.razor");

            AddTestResult("简化调试测试", success,
                success ? "调试测试成功，请查看应用日志获取详细信息"
                        : "调试测试失败，请查看应用日志获取详细错误信息",
                "此测试会输出详细的调试日志，请查看应用程序日志文件或控制台输出");
        }
        catch (Exception ex)
        {
            LoggingService.LogAccess("ADMIN", "EMAIL_TEST_SIMPLE",
                $"EXCEPTION:{ex.Message}", "EmailTest.razor");

            AddTestResult("简化调试测试", false, "测试过程中发生异常", ex.Message);
        }
        finally
        {
            IsTesting = false;
            CurrentTest = "";
            StateHasChanged();
        }
    }

    private async Task RunBasicTest()
    {
        IsTesting = true;
        CurrentTest = "basic";
        StateHasChanged();

        try
        {
            var success = await EmailService.TestEmailServiceAsync();

            LoggingService.LogAccess("ADMIN", "EMAIL_TEST_BASIC",
                success ? "SUCCESS" : "FAILED", "EmailTest.razor");

            AddTestResult("基础连通性测试", success,
                success ? "邮件服务连接正常，测试邮件发送成功"
                        : "邮件服务连接失败或发送失败",
                success ? "API连接正常，邮件已发送到默认收件人"
                        : "请检查API配置和网络连接");
        }
        catch (Exception ex)
        {
            LoggingService.LogAccess("ADMIN", "EMAIL_TEST_BASIC",
                $"EXCEPTION:{ex.Message}", "EmailTest.razor");

            AddTestResult("基础连通性测试", false, "测试过程中发生异常", ex.Message);
        }
        finally
        {
            IsTesting = false;
            CurrentTest = "";
            StateHasChanged();
        }
    }

    private async Task RunSecurityTest()
    {
        IsTesting = true;
        CurrentTest = "security";
        StateHasChanged();

        try
        {
            var success = await EmailService.SendSecurityAlertAsync(
                "测试安全警报",
                "这是一个测试安全警报，用于验证安全邮件通知功能是否正常工作。",
                "192.168.1.100");

            AddTestResult("安全警报测试", success,
                success ? "安全警报邮件发送成功" : "安全警报邮件发送失败",
                success ? "安全警报邮件已发送，包含完整的安全事件信息" : "请检查邮件服务配置");
        }
        catch (Exception ex)
        {
            AddTestResult("安全警报测试", false, "测试过程中发生异常", ex.Message);
        }
        finally
        {
            IsTesting = false;
            CurrentTest = "";
            StateHasChanged();
        }
    }

    private async Task RunSystemNotificationTest()
    {
        IsTesting = true;
        CurrentTest = "notification";
        StateHasChanged();

        try
        {
            var success = await EmailService.SendSystemNotificationAsync(
                "系统通知测试",
                "这是一个系统通知测试邮件，用于验证系统通知功能是否正常工作。系统当前运行正常，所有服务都在线。");

            AddTestResult("系统通知测试", success,
                success ? "系统通知邮件发送成功" : "系统通知邮件发送失败",
                success ? "系统通知邮件已发送，格式正确" : "请检查邮件服务配置");
        }
        catch (Exception ex)
        {
            AddTestResult("系统通知测试", false, "测试过程中发生异常", ex.Message);
        }
        finally
        {
            IsTesting = false;
            CurrentTest = "";
            StateHasChanged();
        }
    }

    private void AddTestResult(string testType, bool success, string message, string details = "")
    {
        TestResults.Add(new TestResult
        {
            TestType = testType,
            Success = success,
            Message = message,
            Details = details,
            Timestamp = DateTime.Now
        });

        // 只保留最近10个测试结果
        if (TestResults.Count > 10)
        {
            TestResults = TestResults.OrderByDescending(r => r.Timestamp).Take(10).ToList();
        }
    }

    private void ClearResults()
    {
        TestResults.Clear();
        StateHasChanged();
    }

    private void GoBack()
    {
        Navigation.NavigateTo("/admin");
    }

    public class TestResult
    {
        public string TestType { get; set; } = "";
        public bool Success { get; set; }
        public string Message { get; set; } = "";
        public string Details { get; set; } = "";
        public DateTime Timestamp { get; set; }
    }
}